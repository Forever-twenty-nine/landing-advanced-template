---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { config } from "../../config.js";
import {Hero1} from "@forever-twenty-nine/astro-ui-lib";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<Hero1
		sectionId="hero"
		sectionClass="pt-24"
		containerId=""
		containerClass=""

		title="Impulsa tu negocio con presencia digital profesional"
		titleClass=""
		
		description="Creamos sitios web modernos, rápidos y efectivos para ayudarte a destacar en línea y atraer más clientes."
		descriptionClass=""

		buttonType="solid"
		buttonHref="#contact"
		buttonText="Contáctanos"
		
		imageSrc="../src/assets/hero.jpg"
	/> 
</Layout>
